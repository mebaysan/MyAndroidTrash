<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baysan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/btnRenkli"
            android:text="@string/btnCallText"
            android:textColor="@color/textDuz"
            android:layout_margin="5dp"
            android:onClick="callMe"/>

        <Button
            android:id="@+id/btnMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/btnRenkli"
            android:text="@string/btnMailText"
            android:textColor="@color/textDuz"
            android:layout_margin="5dp"
            android:onClick="mailMe"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/btnRenkli"
            android:text="@string/btnCityText"
            android:textColor="@color/textDuz"
            android:layout_margin="5dp"
            android:onClick="openCityActivity"/>

        <Button
            android:id="@+id/btnLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/btnRenkli"
            android:text="@string/btnLessonText"
            android:textColor="@color/textDuz"
            android:layout_margin="5dp"
            android:onClick="openCoursesActivity"/>

    </LinearLayout>
</LinearLayout>