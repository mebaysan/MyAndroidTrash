<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout style="@style/customLinearLayout">

        <TextView
            android:id="@+id/tvCityWeather"
            style="@style/tvLabel"
            android:text=""
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/ivCityWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGallery"
            style="@style/customButton"
            android:text="@string/btnGallery"
            android:onClick="getPhotosActivity"/>

        <Button
            android:id="@+id/btnDistrict"
            style="@style/customButton"
            android:text="@string/btnDistrict"
            android:onClick="getDistrictsActivity"/>

        <Button
            android:id="@+id/btnWebView"
            style="@style/customButton"
            android:onClick="getWebViewIntent" />
    </LinearLayout>


</LinearLayout>